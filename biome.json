{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"correctness": {
				"noConstantCondition": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off"
			}
		}
	},
	"css": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 4,
			"quoteStyle": "double"
		}
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 4,
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": false
		}
	}
}
